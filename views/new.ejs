<%- include('partials/header') %>

<div class="ui container text segment">
    <form class="ui fluid form" action="/blogs" method="POST">
        <h2 class="ui header">New Post</h2>
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Post title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image url">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" cols="30" rows="10" placeholder="Content goes here"></textarea>
        </div>
        <button class="ui grey basic button" type="submit">Post</button>
    </form>
</div>

<%- include('partials/footer') %>