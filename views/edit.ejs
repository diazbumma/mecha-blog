<%- include('partials/header') %>

<div class="ui container text segment">
    <form class="ui fluid form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <h2 class="ui header">Edit: <%= blog.title %></h2>
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <button class="ui grey basic button" type="submit">Update</button>
    </form>
</div>

<%- include('partials/footer') %>